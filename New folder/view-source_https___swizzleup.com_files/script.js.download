//--- navbar -- //

document.addEventListener("DOMContentLoaded", function () {
    document.getElementById('swizzlelogoscroll').hidden = true;
    const header = document.querySelector(".head");
    const toggleClass = "is-sticky";

    window.addEventListener("scroll", () => {
        const currentScroll = window.pageYOffset;
        const bannerHeight = document.querySelector(".sticky-nav").offsetHeight;

        if (currentScroll >bannerHeight) {
            
            header.classList.add(toggleClass);
            document.getElementById('swizzlelogo').hidden = true;
            document.getElementById('swizzlelogoscroll').hidden = false;
        } else {
            header.classList.remove(toggleClass);
            document.getElementById('swizzlelogo').hidden = false;
            document.getElementById('swizzlelogoscroll').hidden = true;
        }
    });
});


